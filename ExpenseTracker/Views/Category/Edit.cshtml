@model ExpenseTracker.Models.Category

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit Category View</h2>

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="Type" value="Expense" checked="@(Model.Type == "Expense")"/>
                        <label class="e-btn" for="radioleft">Expense</label>
                        <input type="radio" id="radiomiddle" name="Type" value="Income"/>
                        <label class="e-btn" for="radiomiddle">Income</label>
                    </div>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="title" ejs-for="@Model.Title" placeholder="Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="icon" ejs-for="@Model.Icon" placeholder="Icon" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
                <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color: #212b36">
                    <i class="fa-solid fa-shapes"></i>
                </div>
            </div>
</div>